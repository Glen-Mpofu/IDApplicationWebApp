<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CompleteApplicationServlet</servlet-name>
        <servlet-class>za.ac.tut.applicant.web.CompleteApplicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelApplicationServlet</servlet-name>
        <servlet-class>za.ac.tut.applicant.web.CancelApplicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllApplicationsServlet</servlet-name>
        <servlet-class>za.ac.tut.admin.web.ViewAllApplicationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendIdServlet</servlet-name>
        <servlet-class>za.ac.tut.admin.web.SendIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteApplicationServlet</servlet-name>
        <servlet-class>za.ac.tut.admin.web.DeleteApplicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewApplicationsByGenderServlet</servlet-name>
        <servlet-class>za.ac.tut.admin.web.ViewApplicationsByGenderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewApplicantsByProvinceServlet</servlet-name>
        <servlet-class>za.ac.tut.admin.web.ViewApplicantsByProvinceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.admin.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompleteApplicationServlet</servlet-name>
        <url-pattern>/CompleteApplicationServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelApplicationServlet</servlet-name>
        <url-pattern>/CancelApplicationServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllApplicationsServlet</servlet-name>
        <url-pattern>/ViewAllApplicationsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendIdServlet</servlet-name>
        <url-pattern>/SendIdServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteApplicationServlet</servlet-name>
        <url-pattern>/DeleteApplicationServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewApplicationsByGenderServlet</servlet-name>
        <url-pattern>/ViewApplicationsByGenderServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewApplicantsByProvinceServlet</servlet-name>
        <url-pattern>/ViewApplicantsByProvinceServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>AdminConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>AdminResources</web-resource-name>
            <description>Resources available to an admin</description>
            <url-pattern>/view_all_applications.jsp</url-pattern>
            <url-pattern>/view_by_gender.jsp</url-pattern>
            <url-pattern>/view_by_province.jsp</url-pattern>
            <url-pattern>/send_id.jsp</url-pattern>
            <url-pattern>/delete_fraudulent_application.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enable authentication of an admin</description>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>FRealm2</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/loginerror.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>An admin can view all applications, view applications by gender, view by province, send ID and delete fraudulent applications.</description>
        <role-name>admin</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/forbidden.jsp</location>
    </error-page>
</web-app>
